  body

    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='/') Raise It!
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarsExampleDefault.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='#') Features
            li.nav-item.active
              a.nav-link(href='#') About
            li.nav-item.active
              a.nav-link(href='#') Contact
          if (!user)
            ul.navbar-nav.ml-auto
              li.nav-item.active
                a.nav-link(href='/login') Login
              li.nav-item.active
                a.nav-link(href='/register') Register
          if (user)
            ul.navbar-nav.ml-auto
              li.nav-item.active
                a.nav-link(href='/logout') Logout
                
    .container
      if (error && error.length > 0)
        br
        h4.error-msg= error
        br      
      block content
    
    .container      
      footer.pt-4.my-md-5.pt-md-5.border-top
        .row
          .col-12.col-md
            h5 Raise It!
            p.text-muted Easily ask questions during presentations.
          .col-6.col-md
          .col-6.col-md
          .col-6.col-md
            h5 Pages
            ul.list-unstyled.text-small
              li
                a.text-muted(href='#') Features
              li
                a.text-muted(href='#') About
              li
                a.text-muted(href='#') Contact
              if (!user)
                li
                  a.text-muted(href='/login') Login
                li
                  a.text-muted(href='/register') Register
              if (user)
                li
                  a.text-muted(href='/logout') Logout                
                
